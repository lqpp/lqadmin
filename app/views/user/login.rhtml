<h1>Login</h1><br />
	
<% if @error then%>
<div style="background: #af0000; color: #ffffff; padding: 20px; text-align: center; font-weight: bold">
	<%= @error%>
</div>	
<br />
<% end%>
	
<% form_tag("?", :method => "post") do %>
<table>
	<tr>
		<td>eMail:</td>
		<td><%= text_field_tag(:email) %></td>
	</tr><tr>
	 	<td>Passwort:</td>
		<td><%= password_field_tag(:pass ) %></td>
	</tr>
</table>
  <%= submit_tag("Login") %>
<% end %>
